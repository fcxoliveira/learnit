<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView02"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_interesses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".aula.gui.CadastrarAulaTutorActivity">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#7bc8f3"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <TextView
            android:text="Teste Aula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/textViewNome"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:text="Tag_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:id="@+id/textView4"
            android:textSize="18sp"
            android:layout_below="@+id/textView103"
            android:layout_alignRight="@+id/editText5"
            android:layout_alignEnd="@+id/editText5"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp" />

        <TextView
            android:text="Tags de aula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView103"
            android:textSize="20sp"
            android:layout_below="@+id/textView101"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="34dp" />

        <TextView
            android:text="Preço"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNome"
            android:textSize="20sp"
            android:layout_below="@+id/textView5"
            android:layout_alignRight="@+id/floatingActionButton8"
            android:layout_alignEnd="@+id/floatingActionButton8"
            android:layout_marginTop="46dp" />

        <TextView
            android:text="Tag_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="20sp"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/textView4"
            android:layout_alignRight="@+id/floatingActionButton7"
            android:layout_alignEnd="@+id/floatingActionButton7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Horas de aula fornecidas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView101"
            android:textSize="20sp"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/textView102"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Descrições da aula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView102"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/textView100"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Nome da aula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView100"
            android:textSize="20sp"

            android:layout_marginTop="46dp"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@android:drawable/ic_menu_edit"
            android:id="@+id/floatingActionButton8"
            android:tint="@android:color/background_light"

            app:backgroundTint="#7bc8f3"
            android:layout_alignTop="@+id/floatingActionButton7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@android:drawable/ic_delete"
            android:id="@+id/floatingActionButton7"
            app:backgroundTint="#7bc8f3"
            android:tint="@android:color/background_light"

            android:layout_marginTop="33dp"
            android:layout_below="@+id/textViewNome"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</ScrollView>